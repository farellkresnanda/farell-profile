<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>

    <!-- Hero Section with Particle Background -->
    <div class="hero-section" id="home">
        <div id="particles-js"></div>
        <div class="hero-content">
            <div class="profile-image-container">
                <img src="/images/profile.jpg" alt="Farell Kresnanda" class="profile-image">
                <div class="image-border-animation"></div>
            </div>
            <h1 class="animated-title">Farell Kresnanda</h1>
            <p class="animated-subtitle">DevOps & Network Enthusiast</p>
            <div class="social-icons">
                <a href="#" class="icon-link"><i class="fa fa-linkedin"></i></a>
                <a href="#" class="icon-link"><i class="fa fa-github"></i></a>
                <a href="#" class="icon-link"><i class="fa fa-twitter"></i></a>
                <a href="#" class="icon-link"><i class="fa fa-envelope"></i></a>
            </div>
            <div class="scroll-down">
                <div class="mouse">
                    <div class="scroller"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <section class="section about-section" id="about">
        <div class="section-container">
            <h2 class="section-title">Tentang Saya</h2>
            <div class="about-content">
                <div class="about-text">
                    <p><%= profile.about %></p>
                    <div class="info-grid">
                        <div class="info-item">
                            <i class="fa fa-map-marker"></i>
                            <span><%= profile.location %></span>
                        </div>
                        <div class="info-item">
                            <i class="fa fa-envelope"></i>
                            <span><%= profile.email %></span>
                        </div>
                        <div class="info-item">
                            <i class="fa fa-phone"></i>
                            <span><%= profile.phone %></span>
                        </div>
                        <div class="info-item">
                            <i class="fa fa-graduation-cap"></i>
                            <span>Telkom University</span>
                        </div>
                    </div>
                    <button class="download-cv-btn">Download CV</button>
                </div>
                <div class="skills-chart">
                    <div class="skill-category">
                        <h3>Hard Skills</h3>
                        <% profile.skills.hard.forEach(skill => { %>
                        <div class="skill-item">
                            <div class="skill-name"><%= skill %></div>
                            <div class="skill-bar">
                                <div class="skill-progress" style="width: <%= Math.floor(Math.random() * 60) + 40 %>%"></div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="skill-category">
                        <h3>Soft Skills</h3>
                        <% profile.skills.soft.forEach(skill => { %>
                        <div class="skill-item">
                            <div class="skill-name"><%= skill %></div>
                            <div class="skill-bar">
                                <div class="skill-progress" style="width: <%= Math.floor(Math.random() * 60) + 40 %>%"></div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Experience Section -->
    <section class="section experience-section" id="experience">
        <div class="section-container">
            <h2 class="section-title">Pengalaman</h2>
            <div class="timeline">
                <% profile.experiences.forEach((exp, index) => { %>
                <div class="timeline-item <%= index % 2 === 0 ? 'left' : 'right' %>">
                    <div class="timeline-content">
                        <div class="timeline-date"><%= exp.period %></div>
                        <h3 class="timeline-title"><%= exp.role %></h3>
                        <h4 class="timeline-subtitle"><%= exp.organization %></h4>
                        <p class="timeline-description"><%= exp.description %></p>
                        <div class="timeline-icon">
                            <i class="fa fa-briefcase"></i>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Education Section -->
    <section class="section education-section" id="education">
        <div class="section-container">
            <h2 class="section-title">Pendidikan</h2>
            <div class="education-cards">
                <% profile.education.forEach(edu => { %>
                <div class="education-card">
                    <div class="education-icon">
                        <i class="fa fa-graduation-cap"></i>
                    </div>
                    <h3 class="education-institution"><%= edu.institution %></h3>
                    <p class="education-degree"><%= edu.degree %></p>
                    <p class="education-details"><%= edu.details %></p>
                    <div class="education-decoration"></div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section class="section projects-section" id="projects">
        <div class="section-container">
            <h2 class="section-title">Proyek</h2>
            <div class="project-gallery">
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/projects/devops.jpg" alt="DevOps Project">
                        <div class="project-overlay">
                            <h3>CI/CD Implementation</h3>
                            <p>Setup pipeline untuk aplikasi web</p>
                            <button class="project-details-btn">Details</button>
                        </div>
                    </div>
                </div>
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/projects/network.jpg" alt="Network Project">
                        <div class="project-overlay">
                            <h3>Network Infrastructure</h3>
                            <p>Desain arsitektur jaringan</p>
                            <button class="project-details-btn">Details</button>
                        </div>
                    </div>
                </div>
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/projects/security.jpg" alt="Security Project">
                        <div class="project-overlay">
                            <h3>Security Assessment</h3>
                            <p>Analisis keamanan sistem</p>
                            <button class="project-details-btn">Details</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="section contact-section" id="contact">
        <div class="section-container">
            <h2 class="section-title">Kontak</h2>
            <div class="contact-content">
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fa fa-envelope"></i>
                        <div>
                            <h3>Email</h3>
                            <p><%= profile.email %></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fa fa-phone"></i>
                        <div>
                            <h3>Telepon</h3>
                            <p><%= profile.phone %></p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fa fa-map-marker"></i>
                        <div>
                            <h3>Lokasi</h3>
                            <p><%= profile.location %></p>
                        </div>
                    </div>
                </div>
                <form class="contact-form">
                    <div class="form-group">
                        <input type="text" placeholder="Nama Anda" required>
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder="Email Anda" required>
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="Subjek">
                    </div>
                    <div class="form-group">
                        <textarea placeholder="Pesan Anda" required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Kirim Pesan</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="/js/particles.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>