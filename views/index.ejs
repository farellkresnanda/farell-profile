<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- <link rel="stylesheet" href="/css/style.css"> -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
  body {
    :root {
    --primary-color: #3498db;
    --secondary-color: #2c3e50;
    --accent-color: #e74c3c;
    --light-color: #ecf0f1;
    --dark-color: #2c3e50;
    --text-color: #333;
    --text-light: #7f8c8d;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }

    body {
    font-family: 'Poppins', sans-serif;
    color: var(--text-color);
    background-color: #f5f7fa;
    line-height: 1.6;
    }

    .container {
    display: flex;
    min-height: calc(100vh - 120px);
    }

    /* Header Styles */
    header {
    background-color: var(--secondary-color);
    color: white;
    padding: 1rem 2rem;
    box-shadow: var(--shadow);
    }

    /* Sidebar Styles */
    .sidebar {
    width: 250px;
    background-color: white;
    box-shadow: var(--shadow);
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    }

    .sidebar-nav ul {
    list-style: none;
    }

    .sidebar-nav li {
    margin-bottom: 1rem;
    }

    .sidebar-nav a {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    color: var(--text-color);
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    }

    .sidebar-nav a:hover {
    background-color: var(--light-color);
    color: var(--primary-color);
    }

    .sidebar-nav a i {
    margin-right: 1rem;
    width: 20px;
    text-align: center;
    }

    .sidebar-nav .active a {
    background-color: var(--primary-color);
    color: white;
    }

    .sidebar-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    }

    .external-link {
    display: flex;
    align-items: center;
    color: var(--primary-color);
    text-decoration: none;
    }

    .external-link:hover {
    text-decoration: underline;
    }

    .external-link i {
    margin-right: 0.5rem;
    }

    /* Main Content Styles */
    .main-content {
    flex: 1;
    padding: 2rem;
    background-color: white;
    margin: 1rem;
    border-radius: 8px;
    box-shadow: var(--shadow);
    }

    /* Landing Page Styles */
    .landing {
    text-align: center;
    padding: 2rem 0;
    }

    .profile-image-container {
    width: 200px;
    height: 200px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 5px solid var(--primary-color);
    box-shadow: var(--shadow);
    }

    .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    }

    .name {
    font-size: 2.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
    }

    /* Section Styles */
    section {
    margin-bottom: 2rem;
    }

    h2 {
    color: var(--secondary-color);
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--light-color);
    }

    h3 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    }

    .meta {
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    }

    /* Experience Styles */
    .experience-item {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
    }

    .experience-item:last-child {
    border-bottom: none;
    }

    /* Skills Styles */
    .skills-container {
    display: flex;
    gap: 2rem;
    }

    .skills-column {
    flex: 1;
    }

    .skills-column ul {
    list-style: none;
    }

    .skills-column li {
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
    }

    .skills-column li:before {
    content: "•";
    color: var(--primary-color);
    position: absolute;
    left: 0;
    font-size: 1.2rem;
    }

    /* Contact Info Styles */
    .contact-info {
    margin-top: 1.5rem;
    }

    .contact-info p {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
    }

    .contact-info i {
    margin-right: 0.75rem;
    color: var(--primary-color);
    width: 20px;
    text-align: center;
    }

    /* Footer Styles */
    footer {
    background-color: var(--secondary-color);
    color: white;
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
    .container {
        flex-direction: column;
    }
    
    .sidebar {
        width: 100%;
        padding: 1rem;
    }
    
    .skills-container {
        flex-direction: column;
        gap: 1rem;
    }
    
    .profile-image-container {
        width: 150px;
        height: 150px;
    }
    
    .name {
        font-size: 2rem;
    }
    }

    /* Header Styles */
    .header-content {
    max-width: 1200px;
    margin: 0 auto;
    }

    .tagline {
    font-weight: 300;
    font-size: 1rem;
    opacity: 0.9;
    }

    /* Mobile Menu Toggle */
    .mobile-menu-toggle {
    display: none;
    position: absolute;
    right: 1rem;
    top: 1rem;
    font-size: 1.5rem;
    cursor: pointer;
    color: white;
    }

    /* Footer Styles */
    .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    }

    .social-links {
    display: flex;
    gap: 1.5rem;
    }

    .social-links a {
    color: white;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
    }

    .social-links a:hover {
    transform: translateY(-3px);
    }

    /* Animation Styles */
    @keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
    }

    /* Responsive Updates */
    @media (max-width: 768px) {
    .mobile-menu-toggle {
        display: block;
    }
    
    .sidebar {
        position: fixed;
        top: 0;
        left: -100%;
        width: 80%;
        height: 100vh;
        z-index: 100;
        transition: left 0.3s ease;
    }
    
    .sidebar.active {
        left: 0;
    }
    
    .mobile-menu-toggle.active {
        position: fixed;
        right: 1rem;
        top: 1rem;
        z-index: 101;
        color: var(--primary-color);
    }
    
    .header-content {
        padding-right: 3rem;
    }
    }
  }
</style>
</head>
<body>
  <%- include('partials/header') %>
  
  <div class="container">
    <%- include('partials/sidebar') %>
    
    <main class="main-content">
      <% if (activeSection === 'about') { %>
        <section class="landing">
          <div class="profile-image-container">
            <img src="/images/profile.jpg" alt="<%= profile.name %>" class="profile-image">
          </div>
          <h1 class="name"><%= profile.name %></h1>
        </section>
        
        <section class="about-section">
          <h2>Tentang Saya</h2>
          <p><%= profile.about %></p>
          <div class="contact-info">
            <p><i class="fas fa-map-marker-alt"></i> <%= profile.location %></p>
            <p><i class="fas fa-envelope"></i> <%= profile.email %></p>
            <p><i class="fas fa-phone"></i> <%= profile.phone %></p>
          </div>
        </section>
      <% } else if (activeSection === 'experience') { %>
        <section class="experience-section">
          <h2>Pengalaman</h2>
          <% profile.experiences.forEach(exp => { %>
            <div class="experience-item">
              <h3><%= exp.position %></h3>
              <p class="meta"><%= exp.organization %> • <%= exp.period %></p>
              <p><%= exp.description %></p>
            </div>
          <% }); %>
        </section>
      <% } else if (activeSection === 'education') { %>
        <section class="education-section">
          <h2>Pendidikan</h2>
          <% profile.education.forEach(edu => { %>
            <div class="education-item">
              <h3><%= edu.institution %></h3>
              <p class="meta"><%= edu.degree %></p>
              <% if (edu.graduation) { %>
                <p class="meta">Lulus: <%= edu.graduation %></p>
              <% } %>
            </div>
          <% }); %>
        </section>
      <% } else if (activeSection === 'skills') { %>
        <section class="skills-section">
          <h2>Kedhilan</h2>
          <div class="skills-container">
            <div class="skills-column">
              <h3>Hard Skills</h3>
              <ul>
                <% profile.skills.hard.forEach(skill => { %>
                  <li><%= skill %></li>
                <% }); %>
              </ul>
            </div>
            <div class="skills-column">
              <h3>Soft Skills</h3>
              <ul>
                <% profile.skills.soft.forEach(skill => { %>
                  <li><%= skill %></li>
                <% }); %>
              </ul>
            </div>
          </div>
        </section>
      <% } %>
    </main>
  </div>
  
  <%- include('partials/footer') %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle functionality
    const mobileMenuToggle = document.createElement('div');
    mobileMenuToggle.className = 'mobile-menu-toggle';
    mobileMenuToggle.innerHTML = '<i class="fas fa-bars"></i>';
    
    const header = document.querySelector('header');
    header.appendChild(mobileMenuToggle);
    
    const sidebar = document.querySelector('.sidebar');
    
    mobileMenuToggle.addEventListener('click', function() {
        sidebar.classList.toggle('active');
        mobileMenuToggle.classList.toggle('active');
    });
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        if (targetId === '#') return;
        
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
            targetElement.scrollIntoView({
            behavior: 'smooth'
            });
        }
        });
    });
    
    // Animation for sections when they come into view
    const animateOnScroll = function() {
        const sections = document.querySelectorAll('section');
        
        sections.forEach(section => {
        const sectionTop = section.getBoundingClientRect().top;
        const windowHeight = window.innerHeight;
        
        if (sectionTop < windowHeight * 0.75) {
            section.style.opacity = '1';
            section.style.transform = 'translateY(0)';
        }
        });
    };
    
    // Set initial state for animation
    const sections = document.querySelectorAll('section');
    sections.forEach(section => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
    });
    
    // Run once on load
    animateOnScroll();
    
    // Run on scroll
    window.addEventListener('scroll', animateOnScroll);
    });
  </script>
</body>
</html>